

<div>
    <div class= "container border text-center centerdiv font">
        <p class="h4 mb-4">Regístrate</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


          <div class="field">
            <%= f.label :name, "Nombre" %><br/>
            <%= f.text_field :name, autocomplete: "Nombre" %>


          <div class="field">
            <%= f.label :rut, "Rut"%><br/>
            <%= f.text_field :rut, autocomplete: "rut" %>
          </div>

          <div class="field">
            <%= f.label :email, "Correo" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>



          <div class="field">
            <%= f.label :password, "Clave" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirma tu Clave" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
<br>